*.tar.zst filter=lfs diff=lfs merge=lfs -text
assets/emscripten/darwin/**/*.tar.zst filter=lfs diff=lfs merge=lfs -text
*.tar filter=lfs diff=lfs merge=lfs -text
assets/cosmocc/*.tar.zst filter=lfs diff=lfs merge=lfs -text
*.tar.zst.part* filter=lfs diff=lfs merge=lfs -text

# Linux clang archives use split files stored directly in git (not LFS)
# to avoid LFS bandwidth limits. Parts are kept under 99MB each.
assets/clang/linux/**/*.tar.zst !filter !diff !merge text=auto
assets/clang/linux/**/*.tar.zst.part* !filter !diff !merge binary
